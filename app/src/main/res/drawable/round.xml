<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<item>
    <shape android:shape="oval" >
        <gradient
            android:startColor="#fff1bd"
            android:endColor="#d859f7"
            android:angle="315"
            android:type="linear" />
        <size android:width="24dp"
            android:height="24dp"/>
    </shape>
</item>

<item
    android:bottom="10dp"
    android:left="10dp"
    android:right="10dp"
    android:top="10dp">
    <shape android:shape="oval" >
        <gradient
            android:startColor="#ffcf88"
            android:endColor="#e288f9"
            android:angle="315"/>
        <size android:width="24dp"
            android:height="24dp"/>
    </shape>
</item>

</layer-list>